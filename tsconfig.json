{
    "compilerOptions": {
      "allowJs": true,          // Allows JavaScript files to be part of the project.
      "checkJs": true,          // Enables error reporting in type-checked JavaScript files.
      "strict": true,           // Enables strict type-checking options.
      "noEmit": true,
      "jsx": "react",
      "esModuleInterop": true,  // Enables compatibility with ES modules.
      "target": "ES2015",       // Set the JavaScript language version for emitted JavaScript and include compatible library declarations.
      "lib": [
        "ES2015",
        "ES2016",
        "ES2017",
        "ES2018",
        "ES2019",
        "ES2020",
        "ES2021",
        "DOM"
      ]  // Include the necessary libraries.
    },
    "include": [
      "./src/**/*"             // Specify the files or directories to include.
    ]
  }